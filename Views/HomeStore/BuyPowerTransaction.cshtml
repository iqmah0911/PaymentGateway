            <h2 class="text-8">Order Details</h2>
        </div>

        <div class="col-md-8 col-lg-6 col-xl-5 mx-auto">
            <div class="bg-white shadow-sm rounded p-3 p-sm-4 mb-0 mb-sm-4">


                <div class="row d-flex">
                    <div class="form-group mx-auto"><b>OrderId: @ViewBag.orderId </b> </div>
                </div>
                <div class="row d-flex">
                    <div class="form-group  mx-auto"><b>Message: @ViewBag.responseMessage </b> </div>
