                    <input type="hidden" asp-for="vendRef" value=" @ViewBag.vendRef" />

                    <div class="d-flex">
                        <button class="btn btn-warning d-inline-block ml-auto" value="Print" type="submit"><span class="fa fa-print"></span> Print </button>
                    </div>
                </form>
                  
                </div>
            </div>
