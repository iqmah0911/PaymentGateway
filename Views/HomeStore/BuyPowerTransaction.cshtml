                    <input type="hidden" asp-for="amountGenerated" value="@ViewBag.amountGenerated" />
                    <input type="hidden" asp-for="disco" value=" @ViewBag.disco" />
                    <input type="hidden" asp-for="receiptNo" value="@ViewBag.receiptNo" />
                    <input type="hidden" asp-for="tax" value="@ViewBag.tax " />
                    <input type="hidden" asp-for="vendTime" value="@ViewBag.vendTime" />
                    <input type="hidden" asp-for="token" value=" @ViewBag.token" />
                    <input type="hidden" asp-for="totalAmountPaid" value="@ViewBag.totalAmountPaid" />
                    <input type="hidden" asp-for="units" value="@ViewBag.units " />
