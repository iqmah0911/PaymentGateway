@model PaymentGateway21052021.Models.OrdersModel

@{
    ViewData["Title"] = "Pay Product With Wallet";
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}



<div class="container">
    <div class="row my-5">

        <div class="col-10 mb-6">

            @*<form asp-action="ProductWallet" asp-controller="HomeStore" method="get">
                </form>*@
            <div class="float-left">
                @if (ViewBag.Message != null)
                {
                    <span class="alert-success">@ViewBag.Message</span>
                }
            </div>
        </div>

        <div class="col-lg-12 text-center mt-5">
            <h2 class="text-8">Order Details</h2>
        </div>

        <div class="col-md-12 col-lg-6 col-xl-5 mx-auto">
            <div class="bg-white shadow-sm rounded p-3 p-sm-4 mb-0 mb-sm-4">

                <div class="row">
                
                        <div class="col-md-6">
                            <form asp-action=" " asp-controller="HomeStore" method="post">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="row d-flex">
                                            <div class="form-group mx-auto"><b> @ViewBag.successMessage </b> </div>

                                        </div>
                                        <div class="row d-flex">
                                            <div class="form-group  mx-auto"><b>Email: @Model.Email </b> </div>
                                        </div>
                                        <div class="row d-flex">
                                            <div class="form-group  mx-auto"><b>Product: @Model.ProductName </b> </div>
                                        </div>
                                        <div class="row d-flex">
                                            <div class="form-group  mx-auto"><b>Phone: @Model.Phone </b> </div>
                                        </div>
                                        <div class="row d-flex">
                                            <div class="form-group  mx-auto"><b>Price: @Model.Amount</b> </div>
                                        </div>



                                        @*<div class="d-flex">
            <button class="btn btn-warning d-inline-block ml-auto" value="Data Bundle" type="submit">Buy Other Bundles </button>
        </div>*@

                                    </div>
                                </div>
                            </form>
                        </div> 
                </div>
                <div class="row">
                    @if (ViewBag.SuccessMessage != null)
                    {
                        <span style="color:green;">@ViewBag.SuccessMessage</span>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


