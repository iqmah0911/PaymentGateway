@model PaymentGateway21052021.Areas.Invoices.Models.Roots
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Data Bundle Receipt";
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}



<link href="~/css/Receipt.css" rel="stylesheet" />
@*<script src="~/js/site.js"></script>*@

<br />
<br />
<div class="container">
    <div class="row my-5">
        <div class="col-10 mb-6">
            <div class="float-left">
                @if (ViewBag.Message != null)
                {
                    <span class="alert-success">@ViewBag.Message</span>
                }
                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="mt-4 mt-lg-0">
                        <span class="alert-danger">@ViewBag.ErrorMessage</span>
                    </div>
                }

            </div>
        </div>

        <div class="col-lg-12 text-center mt-5">
            <h2 class="text-8">Data Bundle Details</h2>
        </div>

        <div class="col-md-8 col-lg-6 col-xl-5 mx-auto">
            <div class="bg-white shadow-sm rounded p-3 p-sm-4 mb-0 mb-sm-4">


                <div id="printThis">

                    <div class="form-group  mx-auto">
                        <div class="body-message">
                            <div class="card">
                                <div class="card-header">  <h5 class="modal-title" style="color:darkorange"><b>Data Bundle Purchase Reciept</b></h5></div><br />
                                <div class="info">
                                    <div class="row">
                                        <div class="col-7"> <span id="heading"><b>Date</b></span><br> <span id="details">@ViewBag.Date</span> </div>
                                        <div class="col-5 pull-right"> <span id="heading"><b>Order No.</b></span><br> <span id="details">@ViewBag.OrderID</span> </div>
                                    </div>
                                </div>
                                <div class="pricing">
                                    <div class="row">
                                        <div class="col-9"> <span id="name"> Network</span> </div>
                                        <div class="col-3"> <span>@ViewBag.Network</span> </div>
                                    </div>
                                </div>
                                <div class="pricing">
                                    <div class="row">
                                        <div class="col-9"> <span id="name"> Amount</span> </div>
                                        <div class="col-3"> <span>&#8358;@ViewBag.Amount</span> </div>
                                    </div>
                                </div>
                                <div class="pricing">
                                    <div class="row">
                                        <div class="col-9"><span id="name">Bundle</span> </div>
                                        <div class="col-3"> <span>@ViewBag.bundle</span> </div>
                                    </div>
                                </div>
                                <div class="total">
                                    <div class="row">
                                        <div class="col-9"><span id="name">Phone</span> </div>
                                        <div class="col-3"> <span> @ViewBag.Phone</span> </div>
                                    </div>
                                </div>

                                <div class="footer">
                                    <div class="row">
                                        <div class="col-7"><img class="img-fluid" src="~/ui/images/EgolePay.png"></div>
                                    </div>
                                    <div class="row">
                                        <div class="col-7"></div>
                                        <div class="col-5">
                                            <button id="btnPrint" type="button" class="btn btn-warning">Print</button>
                                        </div>
                                    </div><br />
                                </div>



                            </div>

                        </div>
                    </div>

                </div>

            </div>
        </div>

    </div>
</div>

<script type="text/javascript">

    document.getElementById("btnPrint").onclick = function () {

        printElement(document.getElementById("printThis"));
    }



    function printElement(elem) {
        var domClone = elem.cloneNode(true);

        var $printSection = document.getElementById("printSection");

        if (!$printSection) {
            var $printSection = document.createElement("div");
            $printSection.id = "printSection";
            document.body.appendChild($printSection);
        }

        $printSection.innerHTML = "";
        //$printSection.appendChild(domClone);
        window.print();
    }


</script>








