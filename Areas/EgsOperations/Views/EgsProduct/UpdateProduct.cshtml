@model PaymentGateway21052021.Areas.EgsOperations.Models.EgsProductViewModel
@{
    ViewData["Title"] = "Update Product";
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}

<div class="col-12">
    <h1>Update Product(s)</h1>
    <nav class="breadcrumb-container d-none d-sm-block d-lg-inline-block" aria-label="breadcrumb">
        <ol class="breadcrumb pt-0">
            <li class="breadcrumb-item">
                <a href="#">Home</a>
            </li>
        </ol>
    </nav>
    <div class="separator mb-5"></div>
</div>

<div class="card-body col-12">
    <div class="card">
        <div class="card-body">
            <a asp-action="ProductList" class="btn btn-warning float-left">List of Product(s)</a>
            @if (ViewBag.Message != null)
            {
                <span class="alert-success">@ViewBag.Message</span>
            }
        </div>
    </div>
</div>

<div class="card-body col-12">
    <div class="card">
        <div class="card-body">

            <form asp-action="UpdateProduct" asp-controller="EgsProduct" method="post">
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label>Product Category</label>
                    <select asp-for="ProductCategoryID" asp-items="@(new SelectList(ViewBag.ProductCategory, "ProductCategoryID", "ProductCategoryName"))"
                            class="form-control"></select>
                    <span asp-validation-for="ProductCategoryID" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <label>Image</label>
                    <input asp-for="Image" type="file" class="form-control" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Product Name</label>
                    <input asp-for="ProductName" placeholder="Enter Product Name" class="form-control" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <label>Product Description</label>
                    <textarea asp-for="ProductDescription" rows="2" cols="20" class="form-control"></textarea>
                    <span asp-validation-for="ProductDescription" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <input type="hidden" asp-for="ProductID" />
                    <input type="submit" value="Update Product" class="btn btn-info" />
                </div>
            </form>
        </div>
    </div>
</div>
