@model PaymentGateway21052021.Areas.EgsOperations.Models.FundWalletAdminViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "FundWalletAdmin";
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}
@*<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>*@
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>

<div class="card">
    <div class="card-body">
        <div class="col-10 mb-5">

            <div class="float-left">
                @if (ViewBag.Message != null)
                {
                    <span class="alert-success">@ViewBag.Message</span>
                }
            </div>
        </div>

        <div class="container-fluid disable-text-selection">
            <div class="row">
                <div class="col-12">
                    <div class="mb-2">
                        <h1>Fund Wallet Administrative</h1>

                        <nav class="breadcrumb-container d-none d-sm-block d-lg-inline-block" aria-label="breadcrumb">
                            <ol class="breadcrumb pt-0">
                                <li class="breadcrumb-item">
                                    <a href="#">Home</a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="#">Wallet</a>
                                </li>
                                <li class="breadcrumb-item active" aria-current="page">Fund Wallet Administrative</li>
                            </ol>
                        </nav>
                    </div>
                    <div class="separator mb-5"></div>
                </div>
            </div>


            <div class="card-body">

                <form asp-action="FundWalletAdmin" asp-controller="EgsWallet" method="post">

                    <div class="row">
                        @if (ViewBag.role == 2)
                        {
                            <div class="col-md-4">
                                <label>Wallet Account</label>
                                <select id="Userid" asp-for="UserID" asp-items="@(new SelectList(ViewBag.AgentList, "itemValue", "itemName"))"
                                        class="form-control select2" placeholder="Agents">
                                    <option value=""> -- Select -- </option>
                                </select>
                                @Html.AntiForgeryToken()
                            </div>
                        }
                        @if (ViewBag.role == 13)
                        {
                            <div class="col-md-4">
                                <label>Wallet Account</label>
                                <select id="Userid" asp-for="UserID" asp-items="@(new SelectList(ViewBag.CAgentList, "itemValue", "itemName"))"
                                        class="form-control select2" placeholder="Agents">
                                    <option value=""> -- Select -- </option>
                                </select>
                                @Html.AntiForgeryToken()
                            </div>
                        }


                        <div class="col-md-4">
                            <label> Transaction Reference Number</label>
                            <input asp-for="TransactionRef" class="form-control" autocomplete="off" required />
                            @Html.AntiForgeryToken()
                        </div>
                        <div class="col-md-4">
                            <label> Amount</label>
                            <input asp-for="Amount" placeholder="Enter the Amount to fund" class="form-control" type="number" autocomplete="off" required />
                            <span asp-validation-for="Amount" class="text-danger"></span>
                            <br />
                            @Html.AntiForgeryToken()
                        </div>
                        <div class="col-md-4">
                            <label> Narration</label>
                            <input asp-for="Narration" class="form-control" autocomplete="off" required />
                            @Html.AntiForgeryToken()
                        </div>
                        <br/>
                        <br />
                        <input type="submit" value="Fund Wallet" class="btn btn-info" />
                    </div>
                    <div>
                        <br />
                        @if (ViewBag.ErrorMessage != null)
                        {
                            <span class="alert-danger font-weight-bold">@ViewBag.ErrorMessage</span>
                        }
                        <br />
                    </div>
                    <br />
                </form>
            </div>
        </div>
    </div>
    <script>
        $('.select2').select2();
    </script>
</div>