@model PaymentGateway21052021.Areas.EgsOperations.Models.InvoiceViewModel

@{
    ViewData["Title"] = "Invoice";
}

<div class="col-12">
    <h1>  @ViewData["Invoice"] </h1>
    <nav class="breadcrumb-container d-none d-sm-block d-lg-inline-block" aria-label="breadcrumb">
        <ol class="breadcrumb pt-0">
            <li class="breadcrumb-item">
                <a href="#">Home</a>
            </li>
        </ol>
    </nav>
    <div class="separator mb-5"></div>
</div>

<div class="card-body">
    <div class="card">
        <div class="card-body">
            <div class="col-mb-12">
                <div class="float-left mr-3">
                    <a asp-action="Invoices" class="btn btn-warning float-left">List of Invoices</a>
                </div>
                <div class="float-left">
                    @if (ViewBag.Message != null)
                    {
                        <span class="alert-success">@ViewBag.Message</span>
                    }
                </div>
            </div>
        </div>
    </div>


    <div class="col-mb-12">
        <form asp-action="Invoice" asp-controller="EgsInvoice" method="post">
            @Html.AntiForgeryToken()
            <input asp-for="ReferenceNo" placeholder="Enter Reference Number" class="form-control" />
            <span asp-validation-for="ReferenceNo" class="text-danger"></span>
            <br />
            @Html.AntiForgeryToken()

            <input type="submit" value="Save" class="btn btn-info" />
        </form>

    </div>
</div>
