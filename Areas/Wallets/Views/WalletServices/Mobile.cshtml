@model PaymentGateway21052021.Areas.Wallets.Models.WalletServices
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers

@{
    ViewData["Title"] = "Mobile";
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}
<br />
<div class="container-fluid disable-text-selection">


    <div class="row list disable-text-selection">

        <div class="col-10 mb-6">

            @if (ViewBag.Message != null)
            {
                <span class="alert-danger">@ViewBag.Message</span>
            }

        </div><br />
        @{
            var productList = ViewBag.Products;//Model.Products.Randomize();
            @foreach (var prod in productList)
            {
                <input asp-for="ProductID" type="hidden" value="@prod.ProductID" />
                string cartName = @prod.ProductName;
                int cartId = @prod.ProductID;
                int ProductModeID = @prod.InvoiceModeID;
                var carClass = "fas fa-mobile-alt fa-5x";
                var myRef = @Html.ActionLink(cartName, cartName);//$"/Home/SelectInsurance?id= {prod.ProductID}&chassis={Model.Chasis}&registration={Model.RegisterationNo}&purpose={Model.VehiclePurpose.VehiclePurposeId}";

                <div class="col-xl-3 col-lg-4 col-12 col-sm-6 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-12 nav-link active text-center">
                                    <span>
                                        <i class='@carClass'></i>
                                        @Html.ActionLink(@cartName, "OrderInfo", new { id = @prod.ProductID }, new { @class = "nav-link active text-center h4" })
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            }
        }
    </div>
</div>
