@page
@model LoginModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<section class="login-area">
    <div class="row m-0">
        <div class="col-lg-6 col-md-12 p-0">
            <div class="login-image">
                <img src="~/ui/images/wepiklime.jpg" alt="image">
            </div>
        </div>
        <div class="col-lg-6 col-md-12 p-lg-5 mb-5 mt-5">
            <div class="login-content">
                <div class="d-table">
                    <div class="d-table-cell">
                        <div class="login-form">

                            <h3>Hello! Welcome To EgolePay</h3>
                            <p>New to EgolePay? <a asp-area="SysSetup" asp-controller="Register" asp-action="RegisterUser">Sign up</a></p>
                            <form id="account" method="post">
                                <hr />
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group">
                                    <input asp-for="Input.Email" type="email" class="form-control" placeholder="Mobile or Email ID" required />
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="Input.Password" type="password" class="form-control" required />
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                                <div class="row mb-4">
                                    <div class="col-sm-4">
                                        <div class="form-check custom-control custom-checkbox">
                                            <input asp-for="Input.RememberMe" name="remember" class="custom-control-input" type="checkbox">
                                            <label class="custom-control-label" asp-for="Input.RememberMe">Remember Me</label>
                                        </div>
                                    </div>
                                    <div class="col-sm text-right"> <a class="justify-content-end" id="forgot-password" asp-page="./ForgotPassword">Forgot Password ?</a> </div>
                                </div>
                                <button type="submit" class="btn btn-primary">Login</button>
                                <div class="connect-with-social">
                                    <button type="submit" class="facebook"><i class="fab fa-facebook-square"></i> Connect with Facebook</button>
                                    <button type="submit" class="google"><i class="fab fa-google"></i> Connect with Google</button>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}