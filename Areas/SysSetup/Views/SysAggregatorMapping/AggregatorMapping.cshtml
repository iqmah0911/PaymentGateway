@model PaymentGateway21052021.Areas.SysSetup.Models.SysAggregatorMappingViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Agent Mapping";
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}


<div class="card-body">

    <h1 class="mb-2">@ViewData["Agent Mapping"]</h1>


    <div class="row">
        <div class="col-12 col-md-12 col-xl-8 col-left">
            <div class="card mb-4">
                <div class="card-body">
                    <form asp-action="AggregatorMapping" asp-controller="SysAggregatorMapping">
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                           
                            <select id="ddlAggregator" asp-for="AggregatorID" class="custom-select" asp-items="@(new SelectList(ViewBag.Aggregator, "AggregatorID", "AggregatorName"))">
                                <option value="">Select Aggregator</option>
                            </select>
                        </div>

                        @*<span asp-validation-for="MerchantID" class="text-danger"></span>*@

                        <div class="form-group">
                            <label class="control-label">Select Agent</label>
                            <select id="ddlAggregator" asp-for="AgentID" class="custom-select"
                                    asp-items="@(new SelectList(ViewBag.Agent, "AgentID", "AgentName"))">
                                <option value="">Select Agent</option>
                            </select>
                        </div>
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </form>

                </div>
            </div>
        </div>

        <div class="col-12 col-md-12 col-xl-4 col-right">
            <div class="card mb-4">
                <div class="card-body mx-auto">
                    <div class="float-left mr-3">
                        <a asp-action="AggregatorMappingList" class="btn btn-warning float-left">List of Agent Mapping</a>
                    </div>
                    <div class="float-left">
                        @if (ViewBag.Message != null)
                        {
                            <span class="alert-success">@ViewBag.Message</span>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
