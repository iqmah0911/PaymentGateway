@model PaymentGateway21052021.Areas.SysSetup.Models.SysCompanyViewModel

@{
    ViewData["Title"] = "Update Company";
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}

<div class="card-body">

    <h2 class="mb-2">Update Company</h2>


    <div class="card">
        <div class="card-body">
            <div class="col-10 mb-5">
                <div class="float-left mr-3">
                    <a asp-action="CompanyList" class="btn btn-warning float-left">List of Company(s)</a>
                </div>
                <div class="float-left">
                    @if (ViewBag.Message != null)
                    {
                        <span class="alert-success">@ViewBag.Message</span>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="col-6 mb-6">

        <form asp-action="UpdateCompany" asp-controller="SysCompany" method="post">
            @Html.AntiForgeryToken()
            @*<label>Select GLAccount</label>
                <select id="glaccountid" asp-for="GLAAccountID" asp-items="@(new SelectList(ViewBag.GLAccountList, "GLAccountID", "GLAccountName"))"
                        class="form-control" placeholder="Service Type"></select>
                <span asp-validation-for="GLAAccountID" class="text-danger"></span>
                <br />
                <br />*@
            <label asp-for="CompanyName"></label>
            <input asp-for="CompanyName" placeholder="Enter Company Name" class="form-control" />
            <span asp-validation-for="CompanyName" class="text-danger"></span>
            <br />
            <label asp-for="CompanyAddress"></label>
            <input asp-for="CompanyAddress" placeholder="Enter Company Address" class="form-control" />
            <span asp-validation-for="CompanyAddress" class="text-danger"></span>
            <br />
            <input type="hidden" asp-for="CompanyID" />
            <input type="submit" value="Update Company" class="btn btn-info" />

        </form>
    </div>
</div>