@model PaymentGateway21052021.Areas.SysSetup.Models.SysUserTypeVIewModel
@{
    ViewData["Title"] = "Update User Type";
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}

<div class="card-body">

    <h2 class="mb-2">Update User Type</h2>


    <div class="card">
        <div class="card-body">
            <div class="col-10 mb-5">
                <div class="float-left mr-3">
                    <a asp-action="UserTypeList" class="btn btn-warning float-left">List of User Types</a>
                </div>
                <div class="float-left">
                    @if (ViewBag.Message != null)
                    {
                        <span class="alert-success">@ViewBag.Message</span>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="col-6 mb-6">

        <form asp-action="UpdateUserType" asp-controller="SysUserType" method="post">
            @Html.AntiForgeryToken()
            <input asp-for="UserType" placeholder="Enter User Type" class="form-control" />
            <span asp-validation-for="UserType" class="text-danger"></span>
            <br /><br />
            <input type="hidden" asp-for="UserTypeID" />
            <input type="submit" value="Update UserType" class="btn btn-info" />
        </form>
    </div>
</div>