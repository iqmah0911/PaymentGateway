@model PaymentGateway21052021.Areas.SysSetup.Models.DocumentsViewModel

@{
    ViewData["Title"] = "Document";
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}

<div class="card-body col-12">
    <div class="card">
        <div class="card-body">
            <a asp-action="Documents" class="btn btn-warning float-left">Create Required Document(s)</a>

            @if (ViewBag.Message != null)
            {
                <span class="alert-success">@ViewBag.Message</span>
            }
        </div>
    </div>
</div>


<div class="card-body col-12">
    <div class="card">
        <div class="card-body">
            <form asp-action="Document" asp-controller="SysDocument" method="post">
                @Html.AntiForgeryToken()
                <div class="form-group row">
                    <div class="form-group col-lg-4 pl-2">
                        <label>Document Name</label>
                        <input asp-for="documentName" placeholder="Enter Document Name" class="form-control" />
                        <span asp-validation-for="documentName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-lg-4 pl-2">
                        <label>Role</label>
                        <select asp-for="RoleID" asp-items="@(new SelectList(ViewBag.Role, "RoleID", "RoleName"))" class="form-control">
                            <option value="">Select Role</option>
                        </select>
                        <span asp-validation-for="RoleID" class="text-danger"></span>
                    </div>
                    <div class="form-group col-lg-4 pr-2">
                        <label>Document Type</label>
                        <select asp-for="documentType" asp-items="@StaticDrpDwnListItems.DocumentTypeList()" class="form-control">
                            <option value="">Please select one</option>
                        </select>
                        <span asp-validation-for="documentType" class="text-danger"></span>
                    </div>
                </div>
                 
                <br />
                <input type="submit" value="Save" class="btn btn-info" />
            </form>
        </div>
    </div>
</div>



