@model PaymentGateway21052021.Areas.SysSetup.Models.InvoiceReversal
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Invoice Reversal";
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}
 

<br /><br />
      <div class="container-fluid disable-text-selection">
          <div class="row">
              <div class="col-12">
                  <div class="mb-2">
                      <h1>Invoice Reversal</h1>

                      <nav class="breadcrumb-container d-none d-sm-block d-lg-inline-block" aria-label="breadcrumb">
                          <ol class="breadcrumb pt-0">
                              <li class="breadcrumb-item">
                                  <a href="#">Home</a>
                              </li>
                              <li class="breadcrumb-item">
                                  <a href="#">Invoice</a>
                              </li>
                              <li class="breadcrumb-item active" aria-current="page">Reversal</li>
                          </ol>
                      </nav>
                  </div>


                  <div class="separator mb-5"></div>
              </div>
          </div> 

          <div class="mb-5">
              <div class="card d-flex flex-row mb-12">
                  <div class="d-flex flex-grow-1 min-width-zero">
                      <div style="padding: 0.20rem !important;" class="card-body align-self-center d-flex flex-column flex-md-row justify-content-between min-width-zero align-items-md-center">




                          <form asp-action="" asp-controller="InvoiceReversal" method="post">
                              <div class="row">

                                  <section class="col-md-6">
                                      <label style="width: 100%;">
                                          walletAccountNumber
                                          <select asp-for="WalletAccountNumber" asp-items="@(new SelectList(ViewBag.Users, "itemValue", "itemName"))"
                                                  class="form-control " placeholder="Agents">
                                              <option value=""> -- Select -- </option>
                                          </select>
                                      </label>
                                      <span asp-validation-for="WalletAccountNumber" class="text-danger"></span>
                                  </section>

                                  <section class="col-md-6">
                                      <label style="width: 100%;">
                                          ReferenceNumber
                                          <input type="text" asp-for="ReferenceNumber" class="form-control col-md-12" autocomplete="off" />
                                      </label>
                                      <span asp-validation-for="ReferenceNumber" class="text-danger"></span>
                                       
                                  </section> 

                              </div>

                              <input type="submit" value="Search" class="btn btn-primary" />
                          </form>
                           

                      </div>
                  </div>
              </div>
          </div>

           


      </div>



