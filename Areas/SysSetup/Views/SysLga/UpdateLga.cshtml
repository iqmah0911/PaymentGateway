@model PaymentGateway21052021.Areas.SysSetup.Models.SysLgaViewModel
@{
    ViewData["Title"] = "Update Local Government Area";
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}

<div class="card-body">

    <h2 class="mb-2">Local Government Area</h2>


    <div class="card">
        <div class="card-body">
            <div class="col-10 mb-5">
                <div class="float-left mr-3">
                    <a asp-action="Lgas" class="btn btn-warning float-left">List of Local Government</a>
                </div>
                <div class="float-left">
                    @if (ViewBag.Message != null)
                    {
                        <span class="alert-success">@ViewBag.Message</span>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="col-6 mb-6">

        <form asp-action="UpdateSysLga" asp-controller="SysSysLga" method="post">
            @Html.AntiForgeryToken()
            <label>Select Products</label>
            <select id="StateID" asp-for="StateID" asp-items="@(new SelectList(ViewBag.StateList, "StateID", "StateName"))"
                    class="form-control" placeholder="Service Type"></select>
            <span asp-validation-for="StateID" class="text-danger"></span>
            <br />
            <input asp-for="LgaName" placeholder="Enter LGA" class="form-control" />
            <span asp-validation-for="LgaName" class="text-danger"></span>
            <br /><br />
            <input type="hidden" asp-for="LgaID" />
            <input type="submit" value="Update" class="btn btn-info" />
        </form>
    </div>
</div>