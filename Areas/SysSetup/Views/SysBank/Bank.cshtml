@model PaymentGateway21052021.Areas.SysSetup.Models.SysBankViewModel
@{
    ViewData["Title"] = "Banks";
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}

<h1>Bank</h1>


<div class="card-body">

    <h1 class="mb-2">@ViewData["Bank"]</h1>

    <div class="card">
        <div class="card-body">
            <div class="col-10 mb-5">
                <div class="float-left mr-3">
                    <a asp-action="Banks" class="btn btn-warning float-left">List of Banks</a>
                </div>
                <div class="float-left">
                    @if (ViewBag.Message != null)
                    {
                        <span class="alert-success">@ViewBag.Message</span>
                    }
                </div>
            </div>
        </div>
    </div>


    <div class="col-6 mb-6">
        <form asp-action="Bank" asp-controller="SysBank" method="post">
            @Html.AntiForgeryToken()
            <input asp-for="BankName" placeholder="Enter Bank Name" class="form-control" />
            <span asp-validation-for="BankName" class="text-danger"></span>
            <br />
            @Html.AntiForgeryToken()
            <input asp-for="BankCode" placeholder="Enter Bank Code" class="form-control" />
            <span asp-validation-for="BankCode" class="text-danger"></span>
            <br />
            <input type="submit" value="Save" class="btn btn-info" />
        </form>

    </div>
</div>
