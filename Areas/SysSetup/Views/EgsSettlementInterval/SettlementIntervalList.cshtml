@model PaymentGateway21052021.Areas.SysSetup.Models.HoldDisplaySettlementIntervalViewModel

@{
    ViewData["Title"] = "SettlementInterval";
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}




<div class="card-body col-10">

    <h2 class="mb-2">
        SettlementInterval(s)
    </h2>

    <div class="card">
        <div class="card-body">

            <div class="col-10 mb-6">

                <form asp-action="SettlementIntervalList" asp-controller="EgsSettlementInterval" asp-area="SysSetUp" method="get">
                    <div class="float-left mr-3">
                        <input name="searchText" placeholder="Enter SettlementInterval" class="form-control" />
                    </div>
                    <div class="float-left">
                        <input type="submit" value="Search" class="btn btn-info float-left mr-3" />
                        <a asp-action="SettlementInterval" class="btn btn-warning float-left ml-3">Create New SettlementInterval</a>
                    </div>

                </form>

            </div>


            @if (Model != null && Model.HoldAllSettlementInterval.Count() > 0)
            {

                <table class="table">
                    <thead>
                        <tr>
                            @*<th>S/N</th>*@
                            <th>
                                SettlementInterval
                            </th>
                            <th>
                                Date Created
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.HoldAllSettlementInterval)
                        {
                            //indx++;
                            <tr>
                                @*<td>@indx</td>*@
                                <td>
                                    @Html.DisplayFor(modelItem => item.SettlementIntervalName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DateCreated)
                                </td>
                                <td>
                                    <a asp-action="UpdateSettlementInterval" asp-route-id="@item.SettlementIntervalID" class="btn btn-success float-left ml-3">
                                        <span class="fe fe-edit">Edit</span>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <!-- pager -->
                @if (Model.Pager.EndPage > 1)
                {

                    <ul class="pagination">
                        @if (Model.Pager.CurrentPage > 1)
                        {
                            <li class="page-item">
                                <a href="~/SysSetup/SettlementInterval/SettlementIntervalList" class="page-link">First</a>
                            </li>
                            <li class="page-item">
                                <a href="~/SysSetup/SettlementInterval/SettlementIntervalList?page=@(Model.Pager.CurrentPage - 1)" class="page-link">Previous</a>
                            </li>
                        }

                        @for (var pageIndex = Model.Pager.StartPage; pageIndex <= Model.Pager.EndPage; pageIndex++)
                        {
                            var myPage = pageIndex;
                            <li class="@(pageIndex == Model.Pager.CurrentPage ? "active" : "") page-item">
                                <a href="~/SysSetup/SettlementInterval/SettlementIntervalList?pageIndex=@myPage" class="page-link"> @myPage </a>
                            </li>
                        }

                        @if (Model.Pager.CurrentPage < Model.Pager.TotalPages)
                        {
                            <li class="page-item">
                                <a href="~/SysSetup/SettlementInterval/SettlementIntervalList?pageIndex=@(Model.Pager.CurrentPage + 1)" class="page-link">Next</a>
                            </li>
                            <li class="page-item">
                                <a href="~/SysSetup/SettlementInterval/SettlementIntervalList?pageIndex=@(Model.Pager.TotalPages)" class="page-link">Last</a>
                            </li>
                        }
                    </ul>
                }
            }
            else
            {
                <br /><br />
                   <div class="col-md-8">
                       <h2>No Available SettlementInterval(s)</h2>
                   </div>
            }
        </div>
    </div>
</div>