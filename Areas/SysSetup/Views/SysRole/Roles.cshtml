@model PaymentGateway21052021.Areas.SysSetup.Models.HoldDisplayRoleViewModel

@{
    ViewData["Title"] = "Roles";
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
    var indx = 0;
}

<div class="card-body">
    <h2 class="mb-2">
        Roles
    </h2>

    <div class="card">
        <div class="card-body">
            <div class="col-10 mb-6">
                <form asp-action="Roles" asp-controller="Home" asp-area="SystemSetUp" method="get">
                    <div class="float-left mr-3">
                        <input name="searchText" placeholder="Enter Role Name" class="form-control" />
                    </div>
                    <div class="float-left">
                        <input type="submit" value="Search" class="btn btn-info float-left mr-3" />
                        <a asp-action="Role" class="btn btn-warning float-left">Create New Role</a>
                    </div>
                </form>
            </div>

            @if (Model != null && Model.HoldAllRoles.Count() > 0)
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th>S/N</th>
                            <th>
                                Name
                            </th>
                            <th>IsActive</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.HoldAllRoles)
                        {
                            indx++;
                            <tr>
                                <td>
                                    @indx
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RoleName)
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.IsActive)</td>
                                <td>
                                    <a asp-action="UpdateRole" asp-route-id="@item.RoleID">Edit</a> |

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <!-- pager -->
                @if (Model.Pager.EndPage > 1)
                {

                    <ul class="pagination">
                        @if (Model.Pager.CurrentPage > 1)
                        {
                            <li class="page-item">
                                <a href="~/SystemSetup/Home/Roles" class="page-link">First</a>
                            </li>
                            <li class="page-item">
                                <a href="~/SystemSetup/Home/Roles?page=@(Model.Pager.CurrentPage - 1)" class="page-link">Previous</a>
                            </li>
                        }

                        @for (var pageIndex = Model.Pager.StartPage; pageIndex <= Model.Pager.EndPage; pageIndex++)
                        {
                            var myPage = pageIndex;
                            <li class="@(pageIndex == Model.Pager.CurrentPage ? "active" : "page-item")">
                                <a href="~/SystemSetup/Home/Roles?pageIndex=@myPage" class="page-link"> @myPage </a>
                            </li>
                        }

                        @if (Model.Pager.CurrentPage < Model.Pager.TotalPages)
                        {
                            <li class="page-item">
                                <a href="~/SystemSetup/Home/Roles?pageIndex=@(Model.Pager.CurrentPage + 1)" class="page-link">Next</a>
                            </li>
                            <li class="page-item">
                                <a href="~/SystemSetup/Home/Roles?pageIndex=@(Model.Pager.TotalPages)" class="page-link">Last</a>
                            </li>
                        }
                    </ul>
                }
            }
            else
            {
                <h2>No Available Body Type(s)</h2>
            }
        </div>
    </div>
</div>