<style>
    /*===============================Datatables Overrides=====================================================*/
    table.dataTable {
        width: 100% !important;
    }

    .sorting.no-sort-sign, .sorting_asc.no-sort-sign, .sorting_desc.no-sort-sign {
        /*display:none;*/
        background-image: none !important;
        cursor: initial !important;
    }
    /*=====================================================================================================*/
</style>



<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="mb-2">
                <h1>Reports</h1>

                <nav class="breadcrumb-container d-none d-sm-block d-lg-inline-block" aria-label="breadcrumb">
                    <ol class="breadcrumb pt-0">
                        <li class="breadcrumb-item">
                            <a href="#">Home</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="#">Reports</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Wallets Activity Details</li>
                    </ol>
                </nav>
            </div>

            <div class="separator mb-5"></div>
        </div>
    </div>


    <div class="card">

        <div class="card-body">
            <div class="col-12 mb-5">
                <div class="float-left mr-3">
                    <h4 class="mb-2">
                        WALLETS TRANSACTION ACTIVITY REPORT FOR THE PERIOD  @ViewBag.OfferingMonthStart @ViewBag.OfferingDayStart @ViewBag.OfferingYearStart  -  @ViewBag.OfferingMonthEnd @ViewBag.OfferingDayEnd @ViewBag.OfferingYearEnd
                    </h4>
                </div>
                <div class="float-left">
                    @if (ViewBag.Message != null)
                    {
                        <span class="alert-success">@ViewBag.Message</span>
                    }
                </div>
            </div>


            @*@if (Model.HoldAllInvoices.Count() == 0)*@

            @if (Model != null && Model.HoldAllWalletHistorys.Count() > 0)
            {
                <div id="formBg" style="width:100%; margin-right:auto; margin-left:auto;padding-top:40px;">
                    <table id="offrptTable" class="table table-responsive table-condensed table-striped" style="width:100%;">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Account</th>
                                <th>Name</th>
                                <th>Transaction Type </th>
                                <th>Reference No</th>
                                @*<th>Trans. Desc.</th>*@
                                <th>Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.HoldAllWalletHistorys)
                            {
                            <tr>
                                <td>@item.PaymentDate.ToString("d MMM yyy h:mm tt")</td>
                                <td>@item.WalletAccountNumber</td>
                                <td>@item.WalletHolder</td>
                                <td>@item.TransactionType</td>
                                <td>@item.ReferenceNo</td>
                                @*<td>@item.TransactionNaration</td>*@
                                @if (@item.Amount > 0)
                                {
                                    <td>
                                        <span class="text-success font-weight-bold"><span>&#8358;</span>@item.Amount</span>
                                    </td>
                                }
                                else
                                {
                                    <td>
                                        <span class="text-danger font-weight-bold"><span>&#8358;</span>@item.Amount</span>
                                    </td>
                                }
                            </tr>

                            }
                        </tbody>
                    </table>


                    @*@if (Model.Pager.EndPage > 1)
                        {
                            <nav class="mt-4 mb-3">
                                <ul class="pagination justify-content-center mb-0">
                                    @if (Model.Pager.CurrentPage > 1)
                                    {
                                        <li class="page-item ">
                                            <a class="page-link first" href="~/Reports/Agents/AgentReports">
                                                <i class="simple-icon-control-start"></i>
                                            </a>
                                        </li>
                                        <li class="page-item ">
                                            <a class="page-link prev" href="~/Reports/Agents/AgentReports?page=@(Model.Pager.CurrentPage - 1)">
                                                <i class="simple-icon-arrow-left"></i>
                                            </a>
                                        </li>
                                    }
                                    @for (var pageIndex = Model.Pager.StartPage; pageIndex <= Model.Pager.EndPage; pageIndex++)
                                    {
                                        var myPage = pageIndex;
