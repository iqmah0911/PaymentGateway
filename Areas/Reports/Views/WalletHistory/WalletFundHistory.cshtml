                                </ul>
                            </nav>
                        }*@

                </div>
            }
            else
            {
                <div class="text-center">
                    <p>No data returned for your selection</p>
                    <a asp-action="WalletHistory" asp-controller="WalletHistory" class="btn btn-primary">Back to selection</a>
                </div>
            }
        </div>
    </div>
</div>


