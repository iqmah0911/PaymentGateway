
@model PaymentGateway21052021.Areas.Reports.Models.HoldOpeningWalletViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = " Opening Wallet Balance Report";
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}


<link href="~/DataTables-1.10.18/css/jquery.dataTables.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.11.1/css/jquery.dataTables.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/buttons/2.0.0/css/buttons.dataTables.min.css" rel="stylesheet" />

<style>
    /*===============================Datatables Overrides=====================================================*/
    table.dataTable {
        width: 100% !important;
    }

    .sorting.no-sort-sign, .sorting_asc.no-sort-sign, .sorting_desc.no-sort-sign {
        /*display:none;*/
        background-image: none !important;
        cursor: initial !important;
    }
    /*=====================================================================================================*/
</style>



<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="mb-2">
                <h3>Users</h3>

                <nav class="breadcrumb-container d-none d-sm-block d-lg-inline-block" aria-label="breadcrumb">
                    <ol class="breadcrumb pt-0">
                        <li class="breadcrumb-item">
                            <a href="#">Home</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="#"> </a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Opening/Closing Balance Report</li>
                    </ol>
                </nav>
            </div>


            <div class="separator mb-5"></div>
        </div>
    </div>


    <div class="card">

        <div class="card-body">

            <table id="offrptTable" class="table table-responsive table-condensed table-striped">
                <thead>
                    <tr>
                        <th>S/N</th>
                        <th>Agent</th>
                        <th> Business Name</th>
                        <th>Opening Balance</th>
                        <th> Closing Balance</th>
                        <th>Wallet Balance</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int ind = 0;
                    }
                    @foreach (var item in Model.HoldAllSettlement)
                    {
                        ind++;
                        <tr>
                            <td>@ind</td>
                            <td>
                                @item.Agent
                            </td>
                            <td>
                                @item.BusinessName
                            </td>
                            <td>
                                @item.OpeningBalance
                            </td>
                            <td>
                                @item.ClosingBalance
                            </td>

                            <td>
                               @item.WalletBalance 
                            </td>

                        </tr>
                    }
                </tbody>
            </table>



        </div>
    </div>

</div>

<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.11.1/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/buttons/2.0.0/js/dataTables.buttons.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
<script src="https://cdn.datatables.net/buttons/2.0.0/js/buttons.html5.min.js"></script>

<script src="~/js/Agentreport.js"></script>




