
@model PaymentGateway21052021.Areas.Reports.Models.HoldAggregatorAgentsbalanceVM
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Agents Wallet Balance Details";
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}




<div class="container-fluid disable-text-selection">
    <div class="row">
        <div class="col-12">
            <div class="mb-2">
                <h3>Agents</h3>

                <nav class="breadcrumb-container d-none d-sm-block d-lg-inline-block" aria-label="breadcrumb">
                    <ol class="breadcrumb pt-0">
                        <li class="breadcrumb-item">
                            <a href="#">Home</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="#">Agents</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">WalletBalance</li>
                    </ol>
                </nav>
            </div>


            <div class="separator mb-5"></div>
        </div>
    </div>
     
    @if (Model != null && Model.HoldAllBalance.Count() > 0)
    {

        <div class="row">
            <div class="col-12 list" data-check-all="checkAll">
                <div class="d-flex flex-row mb-3">
                    <div class="d-flex flex-grow-1 min-width-zero">
                        <div class="card-body align-self-center d-flex flex-column flex-md-row justify-content-between min-width-zero align-items-md-center">
                            <h3 class="mb-0 text-muted text-small w-15 w-xs-100"> Teller Name</h3> 
                            <h3 class="mb-0 text-muted text-small w-15 w-xs-100">Teller Email </h3>
                            <h3 class="mb-0 text-muted text-small w-15 w-xs-100"> Teller Balance </h3>
                        </div>
                    </div>
                </div>

                @foreach (var item in Model.HoldAllBalance)
                {
                    <div class="card d-flex flex-row mb-3">
                        <div class="d-flex flex-grow-1 min-width-zero">
                            <div class="card-body align-self-center d-flex flex-column flex-md-row justify-content-between min-width-zero align-items-md-center">
                                <h4>
                                    <b> @item.Name</b>
                                </h4>
                                <h4><b>@item.Email</b></h4>

                                @if (item.Balance > 0)
                                {
                                    <h4 style="color:lawngreen"><b>@item.Balance</b> </h4>
                                }
                                else
                                {
                                    <h4 style="color:red"><b>@item.Balance</b> </h4>
                              }

                            </div>
                        </div>
                    </div>

                }
                 
            </div>


        </div>
    }
    else
    {
        <div class="mb-5">
            <div class="card d-flex flex-row mb-12">
                <div class="d-flex flex-grow-1 min-width-zero">
                    <div style="padding: 0.20rem !important;" class="card-body align-self-center d-flex flex-column flex-md-row justify-content-between min-width-zero align-items-md-center">
                        <h2 class="card-body text-center"> No Agents available for display</h2>
                    </div>
                </div>
            </div>
        </div>
    }
</div>





