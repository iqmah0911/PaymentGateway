<style>
    /*===============================Datatables Overrides=====================================================*/
    table.dataTable {
        width: 100% !important;
    }

    .sorting.no-sort-sign, .sorting_asc.no-sort-sign, .sorting_desc.no-sort-sign {
        /*display:none;*/
        background-image: none !important;
        cursor: initial !important;
    }
    /*=====================================================================================================*/
</style>



<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="mb-2">
                <h1>Reports</h1>

                <nav class="breadcrumb-container d-none d-sm-block d-lg-inline-block" aria-label="breadcrumb">
                    <ol class="breadcrumb pt-0">
                        <li class="breadcrumb-item">
                            <a href="#">Home</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="#">Reports</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Audit Trail Report</li>
                    </ol>
                </nav>
            </div>

            <div class="separator mb-5"></div>
        </div>
    </div>


    <div class="card">

        <div class="card-body">
            <div class="col-12 mb-5">
                <div class="float-left mr-3">
                    <h4 class="mb-2">
                        Audit Trail report for the period  @ViewBag.OfferingMonthStart @ViewBag.OfferingDayStart @ViewBag.OfferingYearStart  -  @ViewBag.OfferingMonthEnd @ViewBag.OfferingDayEnd @ViewBag.OfferingYearEnd
                    </h4>
                </div>
                <div class="float-left">
                    @if (ViewBag.Message != null)
                    {
                        <span class="alert-success">@ViewBag.Message</span>
                    }
                </div>
            </div>

             
            @if (Model != null && Model.HoldRPTAuditTrail.Count() > 0)
            {
                <div id="formBg" style="width:100%; margin-right:auto; margin-left:auto;padding-top:40px;">
                    <table id="offrptTable" class="table table-responsive table-condensed table-striped">
                        <thead>
                            <tr>
                                <th>Audit ID</th>
                                <th>Role</th>
                                <th>Menu</th>
                                <th>Page</th>
                                <th>DbAction</th>
                                <th>Description</th>
                                <th>IPAddress</th>
                                <th>DateCreated</th>  
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int ind = 0;
                            }
                            @foreach (var item in Model.HoldRPTAuditTrail)
                            {
                                ind++;
                                <tr>
                                    <td>@ind</td>
                                    <td>@item.Role</td>
                                    <td>@item.Menu</td> 
                                    <td>@item.Page</td>
                                    <td>@item.DbAction</td>
                                    <td>
                                        @item.Description  
                                    </td>
                                    <td>@item.IPAddress </td>
                                    <td>@item.DateCreated.ToString("HH:mm:ss") </td>

                                </tr>

                            }
                        </tbody>
                        <tfoot>
                            <tr>
                         
                            </tr>
                        </tfoot>
                    </table>


