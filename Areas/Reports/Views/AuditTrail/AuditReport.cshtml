@model PaymentGateway21052021.Areas.Reports.Models.AuditTrailViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Audit Report";
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="card">
        <div class="card-body">
            <h1 class="mb-2">Audit Trail Report</h1>
            <div class="card-body">
                <div class="col-10 mb-5">
                    <div class="float-left mr-3">
                    </div>
                    <div class="float-left">
                        @if (ViewBag.Message != null)
                        {
                            <span class="alert-success">@ViewBag.Message</span>
                        }
                    </div>
                </div>


                @*<ul class="nav nav-tabs justify-content-center">
                    @if (ViewBag.role == 2)
                    {
                        <li><a data-toggle="tab" href="#menu1" class="btn btn-primary">Search Audit Trail </a></li>

                    } 
                </ul>*@

                @*<div class="tab-content">
                    <div id="home" class="tab-pane fade in active">*@
                        <br />
                        <div class="col-lg-12">
                            <br />
                            <div class="row">
                                <h4>Select Start Date to End Date </h4>
                            </div><br />
                            <form asp-action="AuditTrailReport" asp-controller="AuditTrail" asp-area="Reports" method="post">
                                <div class="row">

                                    <section class="col-md-6">
                                        <label style="width: 100%;">
                                            Start Date
                                            <input type="date" asp-for="StartDate" class="form-control col-md-12" autocomplete="off" />
                                        </label>
                                        <span asp-validation-for="StartDate" class="text-danger"></span>
                                    </section>

                                    <section class="col-md-6">
                                        <label style="width: 100%;">
                                            End Date
                                            <input type="date" asp-for="EndDate" class="form-control col-md-12" autocomplete="off" />
                                        </label>
                                        <span asp-validation-for="EndDate" class="text-danger"></span>
                                    </section>


                                </div>

                                <input type="submit" value="Search" class="btn btn-primary" />
 
                            </form>
                        </div>

                    </div>
           
                </div>



            </div> 
        </div>

    @*</div>
</div>*@



<script type="text/javascript">
    $("#StartDate").datepicker({
        format: "dd/MM/yyyy",
        startDate: "-10y",
        endDate: "0d",
        calendarWeeks: true
    });

    $("#EndDate").datepicker({
        format: "dd/MM/yyyy",
        startDate: "-10y",
        endDate: "0d",
        calendarWeeks: true
    });

</script>

