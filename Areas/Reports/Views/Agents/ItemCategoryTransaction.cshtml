                                    <h5 class="mb-0 text-muted text-small w-15 w-xs-100"></h5>

                                </div>
                            </div>
                        </div>




                        @if (Model.Pager.EndPage > 1)
                        {
                            <nav class="mt-4 mb-3">
                                <ul class="pagination justify-content-center mb-0">
                                    @if (Model.Pager.CurrentPage > 1)
                                    {
                                        <li class="page-item ">
                                            <a class="page-link first" href="~/Reports/Agents/ItemCategoryTransaction">
                                                <i class="simple-icon-control-start"></i>
                                            </a>
                                        </li>
                                        <li class="page-item ">
                                            <a class="page-link prev" href="~/Reports/Agents/ItemCategoryTransaction?page=@(Model.Pager.CurrentPage - 1)">
                                                <i class="simple-icon-arrow-left"></i>
                                            </a>
                                        </li>
                                    }
                                    @for (var pageIndex = Model.Pager.StartPage; pageIndex <= Model.Pager.EndPage; pageIndex++)
                                    {
                                        var myPage = pageIndex;
                                        <li class="page-item @(pageIndex == Model.Pager.CurrentPage ? "active" : "") page-item">
                                            <a class="page-link" href="~/Reports/Agents/ItemCategoryTransaction?pageIndex=@myPage">  @myPage </a>
                                        </li>
                                    }
                                    @if (Model.Pager.CurrentPage < Model.Pager.TotalPages)
                                    {
                                <li class="page-item "> 
                                    <a class="page-link next" href="~/Reports/Agents/ItemCategoryTransaction?pageIndex=@(Model.Pager.CurrentPage + 1)" aria-label="Next">
                                        <i class="simple-icon-arrow-right"></i>
                                    </a>
                                </li>
                                        <li class="page-item ">
                                            <a class="page-link last" href="~/Reports/Agents/ItemCategoryTransaction?pageIndex=@(Model.Pager.TotalPages)">
                                                <i class="simple-icon-control-end"></i>
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </nav>

                        }
