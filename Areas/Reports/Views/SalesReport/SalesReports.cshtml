@model PaymentGateway21052021.Areas.Reports.Models.HoldSalesRViewModel


@{
    ViewData["Title"] = $"Sales report for the period {ViewBag.OfferingMonthStart}{ViewBag.OfferingDayStart}{ViewBag.OfferingYearStart} - {ViewBag.OfferingMonthEnd} {ViewBag.OfferingDayEnd} {ViewBag.OfferingYearEnd}";
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}



<link href="~/DataTables-1.10.18/css/jquery.dataTables.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.11.1/css/jquery.dataTables.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/buttons/2.0.0/css/buttons.dataTables.min.css" rel="stylesheet" />

<style>
    /*===============================Datatables Overrides=====================================================*/
    table.dataTable {
        width: 100% !important;
    }

    .sorting.no-sort-sign, .sorting_asc.no-sort-sign, .sorting_desc.no-sort-sign {
        /*display:none;*/
        background-image: none !important;
        cursor: initial !important;
    }
    /*=====================================================================================================*/
</style>



<div class="container">
    <div class="card">

        <div class="card-body">
            <div class="col-10 mb-5">
                <div class="float-left mr-3">
                    <h4 class="mb-2">
                        Sales report for the period  @ViewBag.OfferingMonthStart @ViewBag.OfferingDayStart @ViewBag.OfferingYearStart  -  @ViewBag.OfferingMonthEnd @ViewBag.OfferingDayEnd @ViewBag.OfferingYearEnd
                    </h4>
                </div>
                <div class="float-left">
                    @if (ViewBag.Message != null)
                    {
                        <span class="alert-success">@ViewBag.Message</span>
                    }
                </div>
            </div>


            @if (Model.HoldAllSales.Count() == 0)
            {
                <div class="text-center">
                    <p>No data returned for your selection</p>
                    <a asp-action="SalesReport" asp-controller="SalesReport" class="btn btn-primary">Back to selection</a>
                </div>
            }
            else
            {
                <div id="formBg" style="width:95%; margin-right:auto; margin-left:auto;padding-top:40px;">
                    <table id="offrptTable" class="table table-responsive table-condensed table-striped">
                        <thead>
                            <tr>
                                <th>SalesID</th>
                                <th>Reference Number</th>
                                <th>Amount</th>
                                <th>Date Created</th>
                                <th>Settlement Date</th>
                                @*<th>Product</th>*@
                                @*<th>ProductItem</th>*@
                                @*<th>PaymentStatus</th>*@
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.HoldAllSales)
                            {

                                //var getProductName = Model.Where(attOffr => attOffr.Product.ProductID == item.Product.ProductID).FirstOrDefault();
                                //var getProductItem = Model.Where(attOffr => attOffr.ProductItemID == item.ProductItemID).FirstOrDefault();

                                <tr>
                                    <td>@item.SalesID</td>
                                    <td>@item.ReferenceNo</td>
                                    <td><span>&#8358;</span>@item.Amount </td>
                                    <td>@item.DateCreated.ToString("dd/MMMM/yyyy")</td>
                                    <td>@item.PaymentDate.ToString("dd/MMMM/yyyy")</td>
                                    @*<td>@item.ProductName</td>*@
                                    @*<td>@item.ProductItemName</td>*@
                                    @*<td>
                                            @if (item.PaymentStatus == true)
                                            {
                                                <span>Paid</span>
                                            }
                                            else
                                            { <span>UnPaid</span>}

                                        </td>*@
                                </tr>
                                 

                            }

                        </tbody>
                        <tfoot>
                            <tr>
                                <th></th>
                                <th></th>
                                <th id="amt-summed" style="padding:0">Total:@ViewBag.baseamount</th>
                                <th></th>
                                <th></th>
                                @*<th></th>*@

                            </tr>
                        </tfoot>
                    </table>
                </div>
            }
        </div>
    </div>
</div>




<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.11.1/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/buttons/2.0.0/js/dataTables.buttons.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
<script src="https://cdn.datatables.net/buttons/2.0.0/js/buttons.html5.min.js"></script>
<script src="~/js/Agentreport.js"></script>