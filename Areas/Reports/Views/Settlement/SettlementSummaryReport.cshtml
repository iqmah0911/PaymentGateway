@model PaymentGateway21052021.Areas.Reports.Models.SettlementReportModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Settlement Summary Report";
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}



<div class="container">
    <div class="card">
        <div class="card-body">
            <h1 class="mb-2">Settlement Summary Report</h1>
            <div class="card-body">
                <div class="col-10 mb-5">
                    <div class="float-left mr-3">
                    </div>
                    <div class="float-left">
                        @if (ViewBag.Message != null)
                        {
                            <span class="alert-success">@ViewBag.Message</span>
                        }
                    </div>
                </div>





                <div class="col-lg-12">
                    <div class="row">
                        <h4>Select Start Date to End Date </h4>
                    </div><br />
                    <form asp-action="SettlementSummaryReport" asp-controller="Settlement" method="post">
                        <div class="row">
                            <section class="col-md-6">
                                <label style="width: 100%;">
                                    Start Date
                                    <input type="date" asp-for="StartDate" class="form-control col-md-12" autocomplete="off" />
                                </label>
                                <span asp-validation-for="StartDate" class="text-danger"></span>
                            </section>

                            <section class="col-md-6">
                                <label style="width: 100%;">
                                    End Date
                                    <input type="date" asp-for="EndDate" class="form-control col-md-12" autocomplete="off" />
                                </label>
                                <span asp-validation-for="EndDate" class="text-danger"></span>
                            </section>
                        </div>

                        <input type="submit" value="Search" class="btn btn-primary" />
                    </form>
                </div>

            </div>

        </div>
    </div>
</div>


